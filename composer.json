{
    "name": "stefanzweifel/alfred-emoji-pack",
    "description": "PHP Script to generate Snippets for Alfred with all available Emojis.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Stefan Zweifel",
            "email": "hello@stefanzweifel.io"
        }
    ],
    "require": {
        "php" : "^8.0",
        "ext-json": "*",
        "ext-zip": "*",
        "symfony/console": "^5.2",
        "guzzlehttp/guzzle": "^7.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Wnx\\AlfredEmojiPack\\": "src"
        }
    },
    "scripts": {
        "build": "@generate",
        "generate": "php ./app generate",
        "format": "php-cs-fixer fix"
    }
}
